@model List<Pellys.Models.Partner>

@{
    ViewBag.Title = "Socios";
    Layout = "_Layout";
}

<h2>Socios</h2>

@Html.ActionLink("Agregar", "New", "Partner", null, new {@class = "btn btn-primary btn-stacked"})

@if (Model.Count == 0)
{
    <p>No hay socios registrados por el momento.</p>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Direcci√≥n</th>
            <th>Telefono</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var partner in @Model)
        {
            <tr>
                <td>@partner.PartnerName</td>
                <td>@partner.PartnerAddress</td>
                <td>@partner.PartnerTelephone</td>
            </tr>
        }
        </tbody>
    </table>
}