@model Pellys.Models.Partner

@{
    ViewBag.Title = "Agregar socio";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Partner"))
{
    @Html.ValidationSummary(true, "Por favor revise los campos marcados con rojo.")
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.PartnerName)
            @Html.TextBoxFor(m => m.PartnerName, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.PartnerName)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.PartnerAddress)
            @Html.TextBoxFor(m => m.PartnerAddress, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.PartnerAddress)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.PartnerTelephone)
            @Html.TextBoxFor(m => m.PartnerTelephone, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.PartnerTelephone)
        </div>
    </div>

    @Html.HiddenFor(m => m.PartnerId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}